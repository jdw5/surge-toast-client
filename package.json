{
	"name": "surge-toast",
	"version": "0.1.0",
	"description": "A Vue 3 + Inertia plugin to render headless toast components.",
	"keywords": [
		"laravel",
		"inertia",
		"vue",
		"toast"
	],
	"author": "Joshua Wallace",
	"repository": {
		"type": "git",
		"url": "https://github.com/jdw5/surge-toast-client.git"
	},
	"homepage": "https://github.com/jdw5/surge-toast-client#readme",
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "vite",
		"build": "vite build && vue-tsc --declaration --emitDeclarationOnly"
	},
	"type": "module",
	"main": "./dist/surge-toast.umd.cjs",
	"module": "./dist/surge-toast.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/surge-toast.js",
			"require": "./dist/surge-toast.umd.cjs"
		}
	},
	"peerDependencies": {
		"@inertiajs/vue3": "^1.0.0",
		"axios": "^1.2.0",
		"vue": "^3.x"
	},
	"devDependencies": {
		"@types/node": "^18.0.0",
		"axios": "^1.2.0",
		"typescript": "^4.5.4",
		"vite": "^4.0.4",
		"vue-tsc": "^1.0.24"
	}
}